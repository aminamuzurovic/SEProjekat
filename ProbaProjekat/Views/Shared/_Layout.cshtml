<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a href='@Url.Action("Index", "Home")'>
                    <button class="btn"><i class="fa fa-home"></i></button>
                </a>
                <a href='@Url.Action("Index", "Patient")'>
                    <button class="btn">Patients</i></button>
                </a>
                <a href='@Url.Action("Add", "Patient")'>
                    <button class="btn_add">Add Patient</i></button>
                </a>
                <a href='@Url.Action("Index", "Doctor")'>
                    <button class="btn">Doctors</i></button>
                </a>
                <a href='@Url.Action("Add", "Doctor")'>
                    <button class="btn_add">Add Doctor</i></button>
                </a>
                <a href='@Url.Action("Index", "Hospital")'>
                    <button class="btn">Hospitals</i></button>
                </a>
                <a href='@Url.Action("Index", "Medicines")'>
                    <button class="btn">Medicines</i></button>
                </a>
                <a href='@Url.Action("About", "Home")'>
                    <button class="btn">About us</i></button>
                </a>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MojPregled</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
